<!--DOCTYPE html-->
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!--==Title============================-->
    <title>Product Page HTML</title>
    <!--==CSS==============================-->
    <link rel="stylesheet" href="/css/ServiceDetail.css"/>
    <!--==Poppins-font=====================-->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=DM+Serif+Display:ital@0;1&family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap" rel="stylesheet">
    <!--==Using-Font-Awesome-for-Icons=====-->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.0/css/all.min.css">

    <!-- Link Swiper's CSS -->
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/swiper/swiper-bundle.min.css"
    />


</head>
<body>

    <!--==Product-Page=================================-->
    <section id="product-page">
    <div class="product-details">
        <!--**Img*************************-->
        <div class="product-img">

        <!-- Swiper Slider -->
        <div class="swiper mySwiper">
            <div class="swiper-wrapper">
            <img src="@Model?.Picture>" />

            </div>

        </div>


           
        </div>
        <!--**Text************************-->
        <div class="product-text">
            <!--category-->
            <span class="product-category">@Model?.ServiceName</span>
            <h3>ASOS Women Clothe</h3>
            <span class="product-price">@Model?.Price</span>
            <p>
                @Model?.Desciptions
            </p>
            <!--size-->
            <div class="product-size-container">
                <strong>Dịch Vụ:</strong>
                <div class="product-size">
                   @foreach (var service in ViewBag.Services)
                   {
                    <input type="checkbox" class="s-checkbox" id="s-xl">
                    <button href="" for="s-xl" class="s-label">@service.ServiceName</button>  
                   }
                </div>
            </div>

            <!--btn-->
            <div class="product-button">
                <a href="#" class="add-bag-btn">Add To Bag</a>
                <a href="#" class="add-wishlist-btn">Add To Wishlist</a>
            </div>
            <!--help-btn-->
            <a href="#" class="help-btn"></a>
        </div>
    </div>
    </section>

    <!--==Jquery===========================-->
   <script
  src="https://code.jquery.com/jquery-3.6.1.js"
  </script>

    <script>
      $('.s-checkbox').on('change', function() {
		    $('.s-checkbox').not(this).prop('checked', false);  
		});
    </script>
</body>
</html>