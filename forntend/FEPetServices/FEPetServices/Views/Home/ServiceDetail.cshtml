    <script>
        // Lấy tham chiếu đến checkbox và select bằng cách sử dụng id
        var checkbox = document.getElementById('toggleSelect');
        var select = document.getElementById('PartnerInfoId');

        // Thêm sự kiện "change" cho checkbox
        checkbox.addEventListener('change', function() {
            if (checkbox.checked) {
                select.removeAttribute('disabled');
            } else {
                select.setAttribute('disabled', 'disabled');
            }
        });
        const input = document.getElementById('petWeight');
        input.addEventListener('change', function() {
            if (input.value && !input.value.endsWith('kg')) {
                input.value += ' kg';
            }
        });

    </script>
  <script>
        document.addEventListener("DOMContentLoaded", function() {
            const fpStart = flatpickr("#datetimeStart", {
                enableTime: true,
                dateFormat: "Y-m-d H:i",
                minTime: "07:30",
                onClose: function(selectedDates, dateStr, instance) {
                    const selectedTime = new Date(dateStr);
                    const serviceType = instance.input.id;
                    
                    // Thay thế giờ đóng cửa trực tiếp trong onClose function
                    let closingTime = new Date(selectedTime.toDateString() + " " + "19:00");
                    if (selectedTime.getHours() >= 19) {
                        const nextDay = new Date(selectedTime);
                        nextDay.setDate(selectedTime.getDate() + 1);
                        nextDay.setHours(7);
                        nextDay.setMinutes(30);
                        selectedTime.setDate(nextDay.getDate());
                        selectedTime.setHours(nextDay.getHours());
                        selectedTime.setMinutes(nextDay.getMinutes());
                        closingTime = new Date(selectedTime.toDateString() + " " + "19:00");
                    }
                    
                    const serviceTime = @Model.Service.Time*60 * 60 * 1000;
                    let endTime = new Date(selectedTime.getTime() + serviceTime);
                    if (endTime > closingTime) {
                        endTime = closingTime;
                    }

                    document.getElementById("datetimeStart").value = selectedTime.toLocaleString();
                    document.getElementById("datetimeEnd").value = endTime.toLocaleString();
                }
            });
        });
    </script>
    <script>
// Function to calculate total amount
function calculateTotal() {
    var petWeight = parseFloat(document.getElementById('petWeight').value);
    var servicePrice = parseFloat(document.querySelector('.price.current-price').textContent);

    var additionalCost = 0;
    var additional =0;

    if (document.getElementById('toggleSelect').checked) {
        additional += 50000;
    }

    if (petWeight <= 5) {
        additionalCost += 0;
    } else if (petWeight > 5 && petWeight <= 10) {
        additionalCost += 50000;
    } else if (petWeight > 10 && petWeight <= 20) {
        additionalCost += 100000;
    } else if (petWeight > 20 && petWeight <= 40) {
        additionalCost += 200000;
    } else if(petWeight > 40) {
        additionalCost += 400000;
    }
     var PartnerInfoId = document.getElementById("PartnerInfoId");
            var selectedPartnerId = PartnerInfoId.options[PartnerInfoId.selectedIndex];

            var PartnerId = document.getElementById("PartnerId");
            PartnerId.value = selectedPartnerId.value;

    var totalAmount = servicePrice + additional+ additionalCost;

            var totalPriceService = document.getElementById("totalPriceService");
            var Weight = document.getElementById("Weight");
            totalPriceService.value = totalAmount;
            Weight.value = petWeight;
            document.getElementById('totalPriceService').textContent = totalPriceService.value;

    // Display the total amount in the HTML
    document.getElementById('totalAmountDisplay').textContent = servicePrice+ "  (dịch vụ) + " +additionalCost+ " (cân nặng) + " +additional+ "  (đối tác) " + "=" +totalAmount + " VNĐ";
}

// Trigger the initial calculation
calculateTotal();

// This function is to trigger the calculation on checkbox change and input change
document.getElementById('toggleSelect').addEventListener('change', calculateTotal);
document.getElementById('petWeight').addEventListener('input', calculateTotal);

   </script>
