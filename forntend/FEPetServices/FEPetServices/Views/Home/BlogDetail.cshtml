﻿<!doctype html>
<html class="no-js" lang="en">
<body class="sticky-header overflow-md-visible">
    <!-- End Header -->

    <main class="main-wrapper">
        <!-- Start Blog Area  -->
        <div class="axil-blog-area axil-section-gap">
            <div class="axil-single-post post-formate post-standard">
                <div class="container">
                    <div class="content-block">
                        <div class="inner">
                            <div class="post-thumbnail">
                                <img style="width: 1300px; height: 600px;" src="@Model.BlogDetail.ImageUrl" alt="blog Images">
                            </div>
                            <!-- End .thumbnail -->
                        </div>
                    </div>
                    <!-- End .content-blog -->
                </div>
            </div>
            <!-- End .single-post -->
            <div class="post-single-wrapper position-relative">
                <div class="container">
                    <div class="row">
                        <div class="col-lg-1">
                            <div class="d-flex flex-wrap align-content-start h-100">
                                <div class="position-sticky sticky-top">
                                    <div class="post-details__social-share">
                                        <span class="share-on-text">Share on:</span>
                                        <div class="social-share">
                                            <a href="#" class="share-button" data-network="facebook"><i class="fab fa-facebook-f"></i></a>
                                            <a href="#" class="share-button" data-network="instagram"><i class="fab fa-instagram"></i></a>
                                            <a href="#" class="share-button" data-network="twitter"><i class="fab fa-twitter"></i></a>
                                            <a href="#" class="share-button" data-network="linkedin"><i class="fab fa-linkedin-in"></i></a>
                                            <a href="#" class="share-button" data-network="discord"><i class="fab fa-discord"></i></a>
                                        </div>
                                        <!-- Thêm thẻ a cho mỗi mạng xã hội -->
                                        <a href="#" class="share-link" data-network="facebook" target="_blank"></a>
                                        <a href="#" class="share-link" data-network="instagram" target="_blank"></a>
                                        <a href="#" class="share-link" data-network="twitter" target="_blank"></a>
                                        <a href="#" class="share-link" data-network="linkedin" target="_blank"></a>
                                        <a href="#" class="share-link" data-network="discord" target="_blank"></a>

                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-7 axil-post-wrapper">
                            <div class="post-heading">
                                <h2 class="title">@Model.BlogDetail.Heading</h2>
                                <div class="axil-post-meta">
                                    <div class="post-meta-content">
                                        <ul class="post-meta-list">
                                            <li>@Model.BlogDetail.PublisheDate</li>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                            @Html.Raw(@Model.BlogDetail.Content)

                        </div>

                        <div class="col-lg-4">
                            <!-- Start Sidebar Area  -->
                            <aside class="axil-sidebar-area">

                                <!-- Start Single Widget  -->
                                <div class="axil-single-widget mt--40">
                                    <span class="title-highlighter highlighter-primary mb--10"> <i class="fal fa-bell"></i>Hot News</span>
                                    <h6 class="widget-title">Danh sách bài viết mới nhất</h6>

                                    <!-- Start Single Post List  -->
                                    @foreach (var blog in Model.ListBlogTop3)
                                    {
                                    <div class="content-blog post-list-view mb--20">
                                        <div class="thumbnail">
                                            <a href="~/Home/BlogDetail?blogId=@blog.BlogId">
                                                <img src="@blog.ImageUrl" alt="Blog Images">
                                            </a>
                                        </div>
                                        <div class="content">
                                            <h6 class="title"><a href="~/Home/BlogDetail?blogId=@blog.BlogId">@blog.PageTile</a></h6>
                                            <div class="axil-post-meta">
                                                <div class="post-meta-content">
                                                    <ul href="~/Home/BlogDetail?blogId=@blog.BlogId">
                                                        <li>@blog.PublisheDate</li>
                                                    </ul>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    }
                                    <!-- End Single Post List  -->

                                </div>
                                <!-- End Single Widget  -->
                                <!-- Start Single Widget  -->
                                <div class="axil-single-widget mt--40">
                                    <span class="title-highlighter highlighter-primary mb--10"> <i class="fal fa-bell"></i>Sản Phẩm Hot</span>
                                    <h6 class="widget-title">Danh sách sản phẩm bán chạy nhất</h6>
                                    <ul class="product_list_widget recent-viewed-product">
                                        <!-- Start Single product_list  -->
                                        @foreach (var product in Model.ListProductTop3)
                                        {
                                            <li>
                                            <div class="thumbnail">
                                                <a href="blog-details.html">
                                                    <img src="@product.Picture" alt="Blog Images">
                                                </a>
                                            </div>
                                            <div class="content">
                                                <h6 class="title"><a href="blog-details.html">@product.ProductName</a></h6>
                                                <div class="product-meta-content">
                                                    <span class="woocommerce-Price-amount amount">@product.Price VNĐ</span>
                                                    <p class="price sold">Đã bán: @product.QuantitySold</p>
                                                </div>
                                            </div>
                                        </li>
                                        }
                                        <!-- End Single product_list  -->
                                    </ul>

                                </div>

                            </aside>
                            <!-- End Sidebar Area -->
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- End Blog Area  -->

        <!-- Start Related Blog Area  -->
        <div class="related-blog-area bg-color-white pb--60 pb_sm--40">
            <div class="container">
                <div class="section-title-wrapper mb--70 mb_sm--40 pr--110">
                    <h3 class="mb--25">Danh sách bài viết</h3>
                </div>
                <div class="related-blog-activation slick-layout-wrapper--15 axil-slick-arrow  arrow-top-slide">
                    
                        @foreach (var blog in Model.Blog)
                        {   @if (@blog.Status == true)
                                {
                                    <div class="slick-single-layout">
                                        <div class="content-blog">
                                            <div class="inner">
                                                <div class="axil-gallery-activation axil-slick-arrow arrow-between-side">
                                                    <!-- Start Single Thumb  -->
                                                    <div class="thumbnail">
                                                        <a href="~/Home/BlogDetail?blogId=@blog.BlogId">
                                                            <img src="@blog.ImageUrl" style="height:200px;width:100%;" alt="Blog Images">
                                                        </a>
                                                    </div>
                                                    <!-- End Single Thumb  -->
                                                </div>
                                                <div class="content"  style="margin-top:50px;">
                                                    <h5 class="title"><a href="~/Home/BlogDetail?blogId=@blog.BlogId">@blog.PageTile</a></h5>
                                                    <div class="axil-post-meta">
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                        }
                    }
                </div>
            </div>
        </div>
    </main>
    <script>
    document.querySelectorAll('.share-button').forEach(function(button) {
    button.addEventListener('click', function(event) {
        event.preventDefault();
        var network = button.getAttribute('data-network');
        var shareURL = 'https://localhost:7247/Home/BlogDetail?blogId=6'; // Đường link của bài viết

        // Tùy chỉnh URL chia sẻ cho từng mạng xã hội
        var shareLinks = {
            facebook: 'https://www.facebook.com/sharer/sharer.php?u=' + encodeURIComponent(shareURL),
            instagram: 'URL_INSTAGRAM', // Thay thế bằng URL Instagram thực tế
            twitter: 'https://twitter.com/intent/tweet?url=' + encodeURIComponent(shareURL),
            linkedin: 'URL_LINKEDIN', // Thay thế bằng URL LinkedIn thực tế
            discord: 'URL_DISCORD' // Thay thế bằng URL Discord thực tế
        };

        if (shareLinks[network]) {
            // Tìm thẻ a tương ứng và thiết lập giá trị href
            var shareLinkElement = document.querySelector('.share-link[data-network="' + network + '"]');
            if (shareLinkElement) {
                shareLinkElement.href = shareLinks[network];
                window.open(shareLinkElement.href, '_blank');
            }
        } else {
            alert('Mạng xã hội không được hỗ trợ.');
        }
    });
});



    </script>
</body>
