<!doctype html>
<html class="no-js" lang="en">

<head>
    <meta charset="utf-8">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <meta name="robots" content="noindex, follow" />
    <meta name="description" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <link rel="stylesheet" href="~/assets/css/vendor/bootstrap.min.css">
    <link rel="stylesheet" href="~/assets/css/vendor/font-awesome.css">
    <link rel="stylesheet" href="~/assets/css/vendor/flaticon/flaticon.css">
    <link rel="stylesheet" href="~/assets/css/vendor/slick.css">
    <link rel="stylesheet" href="~/assets/css/vendor/slick-theme.css">
    <link rel="stylesheet" href="~/assets/css/vendor/jquery-ui.min.css">
    <link rel="stylesheet" href="~/assets/css/vendor/sal.css">
    <link rel="stylesheet" href="~/assets/css/vendor/magnific-popup.css">
    <link rel="stylesheet" href="~/assets/css/vendor/base.css">
    <link rel="stylesheet" href="~/assets/css/style.min.css">
    <link rel="stylesheet" href="~/css/RoomCustomer.css">
</head>

<body class="sticky-header">
    <main class="main-wrapper">
        <div class="axil-breadcrumb-area">
            <div class="container">
                <div class="row align-items-center">
                    <div class="col-lg-6 col-md-8">
                        <div class="inner">
                            <ul class="axil-breadcrumb">
                                <li class="axil-breadcrumb-item"><a href="#">Trang chủ</a></li>
                                <li class="separator"></li>
                                <li class="axil-breadcrumb-item active" aria-current="page">Phòng</li>
                            </ul>
                            <h1 class="title">Dịch vụ đặt phòng cho thú cưng</h1>
                        </div>
                    </div>
                    <div class="col-lg-6 col-md-4">
                        <div class="inner">
                            <div class="bradcrumb-thumb">
                                <img src="~/img/Room/imgroom.png" alt="Image">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="axil-shop-area axil-section-gap bg-color-white">
            <div class="container">
                <div class="row">
                    <div class="col-lg-3">
                        <div class="axil-shop-sidebar">
                            <div class="d-lg-none">
                                <button class="sidebar-close filter-close-btn"><i class="fas fa-times"></i></button>
                            </div>
                            <div class="toggle-list product-categories active">
                                <h6 class="title">Loại phòng</h6>
                                <div class="shop-submenu">
                                    <ul>
                                        @{
                                            var url = "/Home/Room";
                                            if (!string.IsNullOrEmpty(ViewBag.sortby))
                                            {
                                                url += "?sortby=" + ViewBag.sortby;
                                            }
                                            if (!string.IsNullOrEmpty(ViewBag.roomname))
                                            {
                                                url += (url.Contains("?") ? "&" : "?") + "roomname=" + ViewBag.roomname;
                                            }
                                            <li class="@(string.IsNullOrEmpty(ViewBag.roomcategory) ? "current-cat" : "")"><a href="@url">Tất cả</a></li>
                                            @foreach (var category in ViewBag.Categories)
                                            {
                                                <li class="@(ViewBag.roomcategory == category.Value ? "current-cat" : "")">
                                                    <a href="@(url + (url.Contains("?") ? "&" : "?") + "roomcategory=" + category.Value)">@category.Text</a>
                                                </li>
                                            }
                                        }
                                    </ul>
                                </div>
                            </div>
                            <div class="toggle-list product-price-range active">
                                <h6 class="title">Giá phòng</h6>
                                <div class="shop-submenu">
                                    <form id="search-price" action="#" class="mt--25">
                                        <div id="slider-range"></div>
                                        <div class="flex-center mt--20">
                                            <span class="input-range">Giá: </span>
                                            <input type="text" id="amount" class="amount-range" readonly>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-9">
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="axil-shop-top mb--40">
                                    <div class="category-select align-items-center justify-content-lg-end justify-content-between">
                                        <span class="filter-results">
                                            <form method="get">
                                                @{
                                                    if (!string.IsNullOrEmpty(ViewBag.sortby))
                                                    {
                                                        <input type="hidden" name="sortby" value="@ViewBag.sortby">
                                                    }
                                                    if (!string.IsNullOrEmpty(ViewBag.roomcategory))
                                                    {
                                                        <input type="hidden" name="roomcategory" value="@ViewBag.roomcategory">
                                                    }
                                                    <div class="relative">
                                                        <input class="input-cal input-base" value="@(ViewBag.roomname)" name="roomname" id="input" placeholder="" type="text">
                                                        <label id="label-input">Name</label>
                                                    </div>
                                                }
                                            </form>
                                        </span>
                                        <form method="get">
                                            @{
                                                if (!string.IsNullOrEmpty(ViewBag.roomname))
                                                {
                                                    <input type="hidden" name="roomname" value="@ViewBag.roomname">
                                                }
                                                if (!string.IsNullOrEmpty(ViewBag.roomcategory))
                                                {
                                                    <input type="hidden" name="roomcategory" value="@ViewBag.roomcategory">
                                                }
                                                <select id="sortby" name="sortby" class="single-select" onchange="this.form.submit();">
                                                    <!option value="name_asc" @(ViewBag.sortby == "name_asc" ? "selected" : "")>Tên từ A-Z</!option>
                                                    <!option value="name_desc" @(ViewBag.sortby == "name_desc" ? "selected" : "")>Tên từ Z-A</!option>
                                                    <!option value="price" @(ViewBag.sortby == "price" ? "selected" : "")>Giá từ thấp đến cao</!option>
                                                    <!option value="price_desc" @(ViewBag.sortby == "price_desc" ? "selected" : "")>Giá từ cao đến thấp</!option>
                                                </select>
                                            }
                                        </form>
                                    </div>
                                    <div class="d-lg-none">
                                        <button class="product-filter-mobile filter-toggle"><i class="fas fa-filter"></i> Bộ lọc</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row row--15">
                            @foreach (var room in Model)
                            {
                                <div class="col-xl-4 col-sm-6">
                                    <div class="axil-product product-style-one mb--30">
                                        <div class="thumbnail">
                                            <a href="/Home/RoomDetail?roomId=@room.RoomId">
                                                <img src="@room.Picture" alt="Product Images">
                                            </a>
                                        </div>
                                        <div class="product-content">
                                            <div class="inner">
                                                <h5 class="title"><a href="/Home/RoomDetail?roomId=@room.RoomId">@room.RoomName</a></h5>
                                                <div class="product-price-variant">
                                                    <span class="price current-price">@room.Price vnđ/h</span>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>

    <script src="~/assets/js/vendor/modernizr.min.js"></script>
    <script src="~/assets/js/vendor/jquery.js"></script>
    <script src="~/assets/js/vendor/popper.min.js"></script>
    <script src="~/assets/js/vendor/bootstrap.min.js"></script>
    <script src="~/assets/js/vendor/slick.min.js"></script>
    <script src="~/assets/js/vendor/js.cookie.js"></script>
    <script src="~/assets/js/vendor/jquery-ui.min.js"></script>
    <script src="~/assets/js/vendor/jquery.ui.touch-punch.min.js"></script>
    <script src="~/assets/js/vendor/jquery.countdown.min.js"></script>
    <script src="~/assets/js/vendor/sal.js"></script>
    <script src="~/assets/js/vendor/jquery.magnific-popup.min.js"></script>
    <script src="~/assets/js/vendor/imagesloaded.pkgd.min.js"></script>
    <script src="~/assets/js/vendor/isotope.pkgd.min.js"></script>
    <script src="~/assets/js/vendor/counterup.js"></script>
    <script src="~/assets/js/vendor/waypoints.min.js"></script>
    <script src="~/assets/js/main.js"></script>

</body>
</html>