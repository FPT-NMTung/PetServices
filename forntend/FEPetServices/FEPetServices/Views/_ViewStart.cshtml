@{
    var routeUrl = ViewContext.RouteData.Values["controller"].ToString();
    var pages = new List<string> { "Login" };
    var pagesPartner = new List<string> { "PartnerRegister" };
    var pagesRegister = new List<string> { "Register" };
    var pagesForgotPassword = new List<string> { "ForgotPassword" };

    if (pages.Any(routeUrl.Contains) || pagesPartner.Any(routeUrl.Contains) || pagesRegister.Any(routeUrl.Contains) || pagesForgotPassword.Any(routeUrl.Contains))
    {
        Layout = "~/Views/Shared/_Layout.cshtml";
    }
    else
    {
        Layout = "~/Views/Shared/_LayoutHome.cshtml";
    }
}