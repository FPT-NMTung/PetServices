@model FEPetServices.Form.LoginForm
@{
    ViewData["Title"] = "Login";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <title>HASH TECHIE OFFICIAL</title>
    <link href="~/css/test.css" rel="stylesheet" />
    <link href="~/css/Login.css" rel="stylesheet"/>
</head>
<body>
    <section>
        <div class="form-box">
            <div class="form-value">
                <form class="login-form" method="post">
                    <h2>Đăng nhập</h2>
                    <div class="inputbox">
                        <ion-icon name="mail-outline"></ion-icon>
                        <input asp-for="Email" type="email" required>
                        <label for="">Email</label>
                    </div>
                    <div class="inputbox">
                        <ion-icon name="lock-closed-outline"></ion-icon>
                        <input asp-for="Password" type="password" required>
                        <label for="">Mật khẩu</label>
                    </div>
                    <div class="forget">
                        <label for=""><input type="checkbox">Ghi nhớ tài khoản  </label>
                        <label>
                            <a href="~/ForgotPassword/Index">Quên mật khẩu</a>
                            @*<a href="#">Quên mật khẩu</a>*@
                        </label>

                    </div>
                    <button onclick="loading();">Đăng nhập</button>
                    <div class="register">
                        <p>Nếu bạn chưa có tài khoản hãy <a href="~/Register/Index">Đăng ký</a></p>
                    </div>
                    <div class="register">
                        <p><a href="~/PartnerRegister/Index">Đăng ký</a> trở thành đối tác</p>
                    </div>
                </form>
            </div>
        </div>

        <div id="toast"></div>
            @if (!string.IsNullOrEmpty(ViewBag.SuccessToast))
        {
            <script>
                document.addEventListener("DOMContentLoaded", function () {
                    showSuccessToast();
                });
            </script>
        }
            @if (!string.IsNullOrEmpty(ViewBag.ErrorToast))
        {
            <script>
                document.addEventListener("DOMContentLoaded", function () {
                    showErrorToast();
                });
            </script>
        }
    </section>
    <script type="module" src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.esm.js"></script>
    <script nomodule src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.js"></script>
    <script src="https://smtpjs.com/v3/smtp.js"></script>
    <script src="~/js/toastnotification.js"></script>
    <script>
        function loading() {
            @if (string.IsNullOrEmpty(ViewBag.ErrorToast) || string.IsNullOrEmpty(ViewBag.SuccessToast))
            {
                @:showWaitToast();
            }
        }
        function showSuccessToast() {
            toast({
                title: 'Thành công',
                message: 'Bạn đăng nhập thành công',
                type: 'success',
                duration: 2000
            });
        }
        function showErrorToast(message = '') {
            toast({
                title: 'Thất bại',
                message: '@ViewBag.ErrorToast',
                type: 'error',
                duration: 2000
            });
        }

        function showWaitToast() {
            toast({
                title: 'Chờ đợi',
                message: 'Vui lòng đợi ít phút hoặc điền đầy đủ thông tin',
                type: 'wating',
                duration: 2000
            });
        }
    </script>
</body>
</html>


@section scripts {
    <partial name="_ValidationScriptsPartial" />
}
