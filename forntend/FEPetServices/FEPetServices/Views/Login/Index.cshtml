@model FEPetServices.Form.LoginForm
@{
    ViewData["Title"] = "Login";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <title>HASH TECHIE OFFICIAL</title>
    <link href="~/css/Login.css" rel="stylesheet"/>
</head>
<body id="login-page">
    <div class="login-page">
        <div class="form-box">
            <div class="form-value">
                <form class="login-form" method="post">
                    <h2>Đăng nhập</h2>
                    <div class="inputbox">
                        <ion-icon name="mail-outline"></ion-icon>
                        <input asp-for="Email" type="email" required>
                        <label for="">Email</label>
                    </div>
                    <div class="inputbox">
                        <ion-icon name="lock-closed-outline"></ion-icon>
                        <input asp-for="Password" type="password" required>
                        <label for="">Mật khẩu</label>
                    </div>
                    <div class="forget">
                        <label for=""><input type="checkbox" class="checkbox-memo">Ghi nhớ tài khoản  </label>
                        <label>
                            <a href="~/ForgotPassword/Index">Quên mật khẩu</a>
                            @*<a href="#">Quên mật khẩu</a>*@
                        </label>

                    </div>
                    <button onclick="loading();">Đăng nhập</button>
                    <div class="register">
                        <p>Nếu bạn chưa có tài khoản hãy <a href="~/Register/Index">Đăng ký</a></p>
                    </div>
                    <div class="register">
                        <p><a href="~/PartnerRegister/Index">Đăng ký</a> trở thành đối tác</p>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <script type="module" src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.esm.js"></script>
    <script nomodule src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.js"></script>
    <script src="https://smtpjs.com/v3/smtp.js"></script>
</body>
</html>
