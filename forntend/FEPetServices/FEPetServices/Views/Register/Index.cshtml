@model FEPetServices.Form.RegisterDTO

@{
    ViewData["Title"] = "Index";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <link rel="stylesheet" href="~/css/Register.css">
    <title>HASH TECHIE OFFICIAL</title>
</head>
<body>
    <section>
        <div class="form-box">
            <div class="form-value">
                <form class="login-form" method="post">
                    <h2>Đăng ký</h2>
                    @if (!string.IsNullOrEmpty(ViewBag.SuccessMessage))
                    {
                        <h1 style="color: red ; text-align: center">Chúc mừng bạn đến với chúng tôi</h1>
                        <p style="text-align:center"><a href="~/Login/Index">Đăng nhập</a> để nghiệm hệ thống</p>
                    }
                    else
                    {
                        <div class="inputbox">
                            <ion-icon name="mail-outline"></ion-icon>
                            <input asp-for="Email" type="email" required>
                            <label for="">Email</label>
                        </div>
                        <div class="inputbox">
                            <ion-icon name="lock-closed-outline"></ion-icon>
                            <input asp-for="Password" type="password"  required>
                            <label for="">Mật khẩu</label>
                        </div>                       
                        <button id="registerButton">Đăng ký</button>
                        <div class="register">
                            <p>Quay trở lại <a href="~/Login/Index">Đăng nhập</a></p>
                        </div>
                    }
                </form>
            </div>
        </div>
    </section>
    <script type="module" src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.esm.js"></script>
    <script nomodule src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.js"></script>
</body>
</html>

<script src="~/js/Register.js"></script>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}


