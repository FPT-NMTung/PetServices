@model FEPetServices.Form.RegisterDTO

@{
    ViewData["Title"] = "Index";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <link rel="stylesheet" href="~/css/Register.css">
    <title>HASH TECHIE OFFICIAL</title>

    <script src="https://smtpjs.com/v3/smtp.js"></script>
</head>
<body>
    <section>
        <div class="form-box">
            <div class="form-value">
                <form asp-controller="Register" asp-action="Index" class="login-form" method="post">
                    <h2>Đăng ký</h2>
                    @if (!string.IsNullOrEmpty(ViewBag.SuccessMessage))
                    {
                        @*<h1 style="color: red ; text-align: center; font-size: 20px">Chúc mừng bạn đến với chúng tôi</h1>
                        <p style="text-align:center; font-style: italic; font-size: 16px;">Vui lòng kiểm tra Email để lấy mã OTP xác minh tài khoản</p>
                        <p style="text-align:center"><a href="~/VerifyEmail/Index">Xác minh</a> để nghiệm hệ thống</p>       *@

                        <script>
                            window.location.href = "~/VerifyEmail/Index";
                        </script>
                    }
                    else
                    {
                        <div class="inputbox">
                            <ion-icon name="mail-outline"></ion-icon>
                            <input asp-for="Email" type="email" required>
                            <label for="">Email</label>
                        </div>
                        <div class="inputbox">
                            <ion-icon name="lock-closed-outline"></ion-icon>
                            <input asp-for="Password" type="password" required>
                            <label for="">Mật khẩu</label>
                        </div>
                        <button id="registerButton">Đăng ký</button>
                        <div class="register">
                            <p>Quay trở lại <a href="~/Login/Index">Đăng nhập</a></p>
                        </div>
                        <br />
                        <br />
                        <br />

                    }
                </form>
            </div>
        </div>
    </section>
    <script type="module" src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.esm.js"></script>
    <script nomodule src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.js"></script>

</body>
</html>

<script src="~/js/Register.js"></script>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}


