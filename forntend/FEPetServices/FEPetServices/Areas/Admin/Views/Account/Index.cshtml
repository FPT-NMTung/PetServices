<style>
    .content {
        padding-top: 50px;
        padding-left: 30px;
        padding-right: 30px;
    }

    .toggle-container {
        width: 50px;
        height: 25px;
        border: 2px solid black;
        border-radius: 12.5px;
        position: relative;
        cursor: pointer;
        background-color: #df0303;
    }

    .toggle-btn {
        width: 23px;
        height: 23px;
        border: 2px solid black;
        border-radius: 50%;
        position: absolute;
        bottom: -0.5px;
        left: -0.5px;
        transition: transform 0.3s ease, background-color 0.3s ease;
        background-color: #d7d7d7;
    }

    .toggle-container.active {
        background-color: #38df03;
    }

        .toggle-container.active .toggle-btn {
            left: 25px;
        }

    .checkbox-btn {
        height: 20px;
        width: 20px;
    }

    .iconUser {
        width: 29px;
        height: 29px;
        position: absolute;
        right: 0;
        margin-right: 30px;
        top: 0;
        margin-top: 20px;
    }

    .title {
        text-align: center;
        font-size: 40px;
        font-weight: bold;
        display: block;
    }

    .btn-add {
        box-shadow: 0 8px 16px 0 rgba(0,0,0,0.2), 0 6px 20px 0 rgba(0,0,0,0.19);
        border-radius: 4px;
        background-color: crimson;
        border: none;
        color: white;
        padding: 7px 10px;
        text-align: center;
        text-decoration: none;
        display: inline-block;
        font-size: 16px;
        margin: -1px 10px;
        cursor: pointer;
        float: right;
        margin-right: 30px;
        margin-bottom: 20px;
    }

        .btn-add:hover {
            box-shadow: 0 12px 16px 0 rgba(0,0,0,0.24), 0 17px 50px 0 rgba(0,0,0,0.19);
            background-color: #ff6347;
        }

    .btn-status-active {
        background-color: green;
        color: white;
    }

    .btn-status-inactive {
        background-color: red;
        color: white;
    }

    .form-select {
        background-color: white;
        border: 2px solid black;
        font-size: 16px;
        line-height: 20px;
        box-shadow: 0 0 5px 0 rgba(0, 0, 0, 0.5);
        height: 25px;
        border-radius: 5px;
    }

    .switch {
        position: relative;
        width: 50px;
        height: 25px;
        margin: 20px auto;
    }

    .toggle {
        position: absolute;
        top: 0;
        left: 0;
        width: inherit;
        height: inherit;
        opacity: 0;
        z-index: 2;
        cursor: pointer;
    }

    .label {
        position: absolute;
        top: 2px;
        left: 2px;
        right: 2px;
        bottom: 2px;
        background-color: #C84444;
        border-radius: 24px;
        transition: background-color .2s ease-in-out;
    }

        .label::before {
            content: "";
            position: absolute;
            top: -2px;
            left: -2px;
            width: 25px;
            height: 25px;
            background-color: white;
            border-radius: inherit;
            border: 1px solid grey;
        }

    .toggle:checked + .label {
        background-color: #66bb6a;
    }

        .toggle:checked + .label::before {
            transform: translateX(100%);
        }

    .td-switch {
        display: flex;
        align-items: center;
    }

        .td-switch .label {
            width: 25px;
            height: 25px;
        }

            .td-switch .label.active {
                background-color: #66bb6a;
            }

            .td-switch .label.inactive {
                background-color: #C84444;
            }

    .btn-edit {
        background-color: #4CAF50;
        color: white;
        padding: 10px 20px;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        transition: background-color 0.3s ease;
    }

        .btn-edit:hover {
            background-color: #45a049;
        }

</style>
<link rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"
      integrity="sha512-iecdLmaskl7CVkqkXNQ/ZH/XLlvWZOJyj7Yy7tcenmpD1ypASozpmT/E0iPtmFIB46ZmdtAc9eNBvH0H/ZpiBw=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer">
<link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/jquery.dataTables.css" />
<link href="~/css/toastNotification.css" rel="stylesheet" />
<script src="~/js/toastnotification.js"></script>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.js"></script>
<script>
    $(document).ready(function () {
        $('#myTable').DataTable({
            "paging": true,
            "searching": true,
            "ordering": true,
            "info": true,
            "autoWidth": false,
            "language": {
                "lengthMenu": "Hiển thị _MENU_ dòng",
                "info": "Hiển thị _START_ - _END_ trên tổng cộng _TOTAL_ dòng",
                "search": "Tìm kiếm:",
                "paginate": {
                    "first": "Đầu",
                    "last": "Cuối",
                    "next": "Tiếp",
                    "previous": "Trước"
                }
            },
        });
        var AddAccountBtn = $('<button id="AddAccountBtn" class="btn-add">Thêm tài khoản</button>');
        $('.dataTables_filter').append(AddAccountBtn);

        $('#AddAccountBtn').on('click', function () {
            window.location.href = '/admin/account/AddAccount';
        });
    });
</script>
<body>
    <div style="width:100vw;max-width:100vw" class="container" id="container">
        <div id="toast"></div>
        <a class="title">Tài khoản</a>
        <div class="content">
            <table id="myTable" class="table">
                <thead>
                    <tr>
                        <th>STT</th>
                        <th>Email</th>
                        <th>Mật khẩu</th>
                        <th>Tên người dùng</th>
                        <th>Địa chỉ</th>
                        <th>Chức vụ</th>
                        <th>Trạng thái</th>
                        <th>Lưu thay đổi</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null)
                    {
                        int itemCount = 0;
                        foreach (var account in Model)
                        {
                            itemCount++;
                            <tr>
                                <td>@itemCount</td>
                                <td>@account.Email</td>
                                <td>@account.Password</td>
                                <td>@account.UserName</td>
                                <td>@account.Address</td>
                                <td>
                                    <select class="form-select" name="Role" id="Role">
                                        <option value="1" @(account.RoleId == 1 ? "selected" : "")>Quản trị viên</option>
                                        <option value="2" @(account.RoleId == 2 ? "selected" : "")>Khách hàng</option>
                                        <option value="3" @(account.RoleId == 3 ? "selected" : "")>Quản lý</option>
                                        <option value="4" @(account.RoleId == 4 ? "selected" : "")>Đối tác</option>
                                    </select>
                                </td>
                                <td>
                                    <div class="switch">
                                        <input type="checkbox" id="toggle-@itemCount" class="toggle" @(account.Status ? "checked" : "") />
                                        <label for="toggle-@itemCount" class="label @(account.Status ? "active" : "inactive")"></label>
                                    </div>
                                </td>
                                <td>
                                    <button class="btn-edit" id="btn-edit-@itemCount">Lưu thay đổi</button>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</body>

<script>
    $(document).ready(function () {
        var btnEdits = $('.btn-edit');

        btnEdits.click(function () {
            var email = $(this).closest('tr').find('td:eq(1)').text();
            var roleId = $(this).closest('tr').find('select[name="Role"]').val();
            var status = $(this).closest('tr').find('input[type="checkbox"]').is(':checked');

            console.log("Email:", email);
                    console.log("RoleId:", roleId);
                    console.log("Status:", status);

            $.ajax({
                url: "Account/UpdateAccount?",
                type: "PUT",
                data: {
                    Email: email,
                    RoleId: roleId,
                    Status: status
                },
                success: function (data) {
                    console.log("Cập nhật thành công:", data);
                    showSuccessToast();
                },
                error: function (error) {
                    console.error("Lỗi khi cập nhật:", error);
                    showErrorToast();
                },

            });
        });
    });
</script>

<script>
    function showSuccessToast(messages = '') {
        toast({
            title: 'Thành công',
            message: 'Cập nhật tài khoản thành công',
            type: 'success',
            duration: 2000
        });
    }

    function showErrorToast() {
        toast({
            title: 'Thất bại',
            message: 'Cập nhật tài khoản thất bại',
            type: 'error',
            duration: 2000
        });
    }
</script>