<style>
    .header {
        padding-top: 10px;
        top: 0;
        display: flex;
        align-items: center;
    }

        .header .image {
            width: 50px;
            height: 50px;
            align-items: center;
            padding-left: 10px;
            font-size: 10px;
        }

        .header .text {
            font-weight: bold;
            font-size: 20px;
            padding-left: 15px;
        }

    .iconUser {
        width: 29px;
        height: 29px;
        position: absolute;
        right: 0;
        margin-right: 30px;
        top: 0;
        margin-top: 20px;
    }

    .title {
        text-align: center;
        font-size: 40px;
        font-weight: bold;
        display: block;
    }

    .container1 {
        width: 600px; 
        margin: auto;
    }

    h1 {
        text-align: center; 
        margin-bottom: 50px;
    }

    .form-group {
        margin: 10px; 
    }

    .input-field {
        width: 100%;
        padding: 5px; 
        border: 1px solid black; 
    }

    .btn-submit {
        background-color: pink; 
        border-radius: 10px;
        margin-right: 50px;
    }

    .btn-back {
        background-color: lightblue; 
        border-radius: 10px; 
        margin-left: 10px;
    }

    .form-group {
        margin-bottom: 15px;
    }

    .form-control {
        width: 80%;
        padding: 10px;
        border: 1px solid #ccc;
        border-radius: 5px;
    }

    label {
        display: inline-block;
        width: 15%;
        font-weight: bold;
    }

    .form-control:focus {
        border-color: #66afe9;
        outline: none;
        box-shadow: inset 0 1px 1px rgba(0,0,0,.075),0 0 8px rgba(102,175,233,.6);
    }

    .btn {
        display: inline-block;
        padding: 10px 20px;
        color: white;
        background-color: #3CBC8D;
        border: none;
        border-radius: 5px;
    }

        .btn:hover {
            background-color: #2E8B57;
        }

    .btn-back {
        margin-left: 10px;
    }

    .buttons{
        text-align: center;
        margin-top: 30px;
    }
</style>
<link href="~/css/toastNotification.css" rel="stylesheet" />
<script src="~/js/toastnotification.js"></script>
<body>
    <div class="container" id="container">
        <div class="header">
            <img class="image" src="https://th.bing.com/th/id/OIG.vxG0JxTUMqr5SuseWGhL?pid=ImgGn" />
            <div class="text">Xin chào : Admin</div>
            <img class="iconUser" src="https://cdn-icons-png.flaticon.com/512/1144/1144760.png" />
        </div>
        <div class="container1">
            <h1>Thêm tài khoản</h1>
            <form id="addAccountForm" action="AddAccount" method="post">
                <div class="form-group">
                    <label for="email">Email:</label>
                    <input type="email" class="form-control" id="email" name="email" required>
                </div>
                <div class="form-group">
                    <label for="password">Mật khẩu:</label>
                    <input type="password" class="form-control" id="password showPassword" name="password" required>
                </div>
                <div class="form-group">
                    <label for="roleId">Vai trò:</label>
                    <select class="form-control" id="roleId" name="roleId">
                        <option value="1">Quản trị viên</option>
                        <option value="2">Khách hàng</option>
                        <option value="3">Quản lý</option>
                        <option value="4">Đối tác</option>
                    </select>
                </div>
                <div class="buttons">
                    <button type="submit" class="btn btn-submit">Thêm tài khoản</button>
                    <button id="BackBtn" type="button" class="btn btn-back">Trở lại</button>
                </div>
            </form>
        </div>
    </div>
    <div id="toast"></div>
    @if (!string.IsNullOrEmpty(ViewBag.Success))
    {
        <script>
            document.addEventListener("DOMContentLoaded", function () {
                showSuccessToast();
            });
        </script>
    }
    @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
    {
        <script>
            document.addEventListener("DOMContentLoaded", function () {
                showErrorToast();
            });
        </script>
    }
    <script>
        document.getElementById("BackBtn").addEventListener("click", function () {
            window.location.href = "/admin/account";
        });
    </script>
</body>
<script>
    function showSuccessToast() {
        toast({
            title: 'Thành công',
            message: '@ViewBag.Success',
            type: 'success',
            duration: 2000
        });
    }
    function showErrorToast() {
        toast({
            title: 'Thất bại',
            message: '@ViewBag.ErrorMessage',
            type: 'error',
            duration: 2000
        });
    }
</script>