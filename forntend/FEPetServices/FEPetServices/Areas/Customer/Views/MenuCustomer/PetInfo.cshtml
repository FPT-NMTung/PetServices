<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="~/css/toastNotification.css" rel="stylesheet" />
</head>
<body>
    <div>
        <div class="tab-content">
            <div style="margin-right:3%" class="tab-pane fade active show" id="account-petinfo">
                <form method="post" asp-controller="MenuCustomer" asp-action="PetInfo" enctype="multipart/form-data">
                    <div id="carouselExampleCaptions" class="carousel slide" data-bs-ride="carousel">
                        <div class="carousel-indicators">
                            @for (int i = 0; i < Model.UserInfo.PetInfos.Count; i++)
                            {
                                <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="@i" @(i == 0 ? "class=active" : "") aria-label="Slide @(i + 1)"></button>
                            }
                        </div>
                        <div class="carousel-inner">
                            @for (int i = 0; i < Model.UserInfo.PetInfos.Count; i++)
                            {
                                <div class="carousel-item @(i == 0 ? "active" : "")">
                                    <img src="https://sb.tinhte.vn/2021/07/5557920_CV.jpg" class="d-block w-100" alt="Ảnh">
                                    <div class="carousel-caption d-none d-md-block">
                                        <h5>@Model.UserInfo.PetInfos[i].PetName</h5>
                                        <p>@Model.UserInfo.PetInfos[i].Species</p>
                                        @if(Model.UserInfo.PetInfos[i].Gender == true)
                                        {
                                            <p>Nam</p>
                                        }
                                        else
                                        {
                                            <p>Nữ</p>
                                        }
                                        <p>@Model.UserInfo.PetInfos[i].Descriptions</p>
                                    </div>
                                </div>
                            }
                        </div>
                        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="prev">
                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                            <span class="visually-hidden">Previous</span>
                        </button>
                        <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="next">
                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                            <span class="visually-hidden">Next</span>
                        </button>
                    </div>
                    <button style="margin-bottom:2%;" class="btn btn-primary" type="submit">Đổi thông tin thú cưng</button>
                    <a style="margin-bottom:2%;" href="~/Customer/Pet/AddPet" class="btn btn-primary" type="submit">Thêm thông tin thú cưng</a>
                </form>
            </div>
        </div>
    </div>
</body>
<script src="~/js/toastnotification.js"></script>
</html>
