<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="~/css/toastNotification.css" rel="stylesheet" />
    <link href="~/css/menucustomer.css" rel="stylesheet" />

    <script src="~/js/takeAddress.js"></script>
</head>
<body>
    <div class="container light-style flex-grow-1 container-p-y">

        <h4 class="font-weight-bold py-3 mb-4">
            Cài đặt tài khoản
        </h4>

        <div class="card overflow-hidden">
            <div class="row no-gutters row-bordered row-border-light">
                <div class="col-md-3 pt-0">
                    <div class="list-group list-group-flush account-settings-links">
                        <a class="list-group-item" href="~/Customer/MenuCustomer/Information">Thông tin cá nhân</a>
                        <a class="list-group-item" href="~/Customer/MenuCustomer/ChangePassword">Đổi mật khẩu</a>
                        <a class="list-group-item list-group-item-action active" href="#account-petinfo">Thông tin thú cưng</a>
                    </div>
                </div>
                <div class="col-md-9">
                    <div class="tab-content">
                        <div style="margin-right:3%" class="tab-pane fade active show" id="account-petinfo">
                            <form method="post" asp-controller="MenuCustomer" asp-action="PetInfo" enctype="multipart/form-data">
                                <div id="carouselExampleCaptions" class="carousel slide" data-bs-ride="carousel">
                                    <div class="carousel-indicators">
                                        @for (int i = 0; i < Model.UserInfo.PetInfos.Count; i++)
                                        {
                                            <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="@i" @(i == 0 ? "class=active" : "") aria-label="Slide @(i + 1)"></button>
                                        }
                                    </div>
                                    <div class="carousel-inner">
                                        @for (int i = 0; i < Model.UserInfo.PetInfos.Count; i++)
                                        {
                                            <div class="carousel-item @(i == 0 ? "active" : "")">
                                                <img src="https://sb.tinhte.vn/2021/07/5557920_CV.jpg" class="d-block w-100" alt="Ảnh">
                                                <div class="carousel-caption d-none d-md-block">
                                                    <h5>@Model.UserInfo.PetInfos[i].PetName</h5>
                                                    <p>@Model.UserInfo.PetInfos[i].Species</p>
                                                    <p>@Model.UserInfo.PetInfos[i].Gender</p>
                                                    <p>@Model.UserInfo.PetInfos[i].Descriptions</p>
                                                </div>
                                            </div>
                                        }
                                    </div>
                                    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="prev">
                                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                        <span class="visually-hidden">Previous</span>
                                    </button>
                                    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="next">
                                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                        <span class="visually-hidden">Next</span>
                                    </button>
                                </div>
                                <button style="margin-bottom:2%;" class="btn btn-primary" type="submit">Đổi thông tin thú cưng</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    </div>
    <div id="toast"></div>
    @if (!string.IsNullOrEmpty(TempData["SuccessToast"] as string))
    {
        <script>
            document.addEventListener("DOMContentLoaded", function () {
                showSuccessToast();
            });
        </script>
    }
    @if (!string.IsNullOrEmpty(TempData["ErrorToast"] as string))
    {
        <script>
            document.addEventListener("DOMContentLoaded", function () {
                showErrorToast();
            });
        </script>
    }
    @if (!string.IsNullOrEmpty(TempData["SuccessLoginToast"] as string))
    {
        <script>
            document.addEventListener("DOMContentLoaded", function () {
                showSuccessLoginToast();
            });
        </script>
    }
</body>
<script src="~/js/toastnotification.js"></script>
<script src="~/js/checkpassword.js"></script>
<script>
    function showSuccessToast() {
        toast({
            title: 'Thành công',
            message: '@TempData["SuccessToast"]',
            type: 'success',
            duration: 2000
        });
    }
    function showErrorToast() {
        toast({
            title: 'Thất bại',
            message: '@TempData["ErrorToast"]',
            type: 'error',
            duration: 2000
        });
    }
    function showSuccessLoginToast() {
        toast({
            title: 'Thành công',
            message: '@TempData["SuccessLoginToast"]',
            type: 'success',
            duration: 2000
        });
    }

</script>
</html>
