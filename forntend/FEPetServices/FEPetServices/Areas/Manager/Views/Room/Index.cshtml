<style>
    h1 {
        text-align: center;
    }

    .future-status {
        color: gray;
    }

    .complete-status {
        color: green;
    }

    .dataTables_wrapper .dataTables_filter {
        float: right;
        margin-bottom: 10px;
    }

    .btn-add {
        box-shadow: 0 8px 16px 0 rgba(0,0,0,0.2), 0 6px 20px 0 rgba(0,0,0,0.19);
        border-radius: 4px;
        background-color: #E21033;
        border: none;
        color: white;
        padding: 7px 10px;
        text-align: center;
        text-decoration: none;
        display: inline-block;
        font-size: 16px;
        margin: 0px 10px;
        cursor: pointer;
        float: right;
        margin-right: 30px;
        margin-bottom: 20px;
    }

        .btn-add:hover {
            box-shadow: 0 12px 16px 0 rgba(0,0,0,0.24), 0 17px 50px 0 rgba(0,0,0,0.19);
            background-color: #ff6347;
        }

    .dataTables_wrapper .dataTables_filter input[type="search"] {
        margin-left: 10px;
        background-color: white;
    }

    .dataTables_wrapper {
        margin: 30px;
    }

    .btn-detail {
        text-align: center;
        border-radius: 5px;
        font-size: 15px;
        color: white;
        display: inline-block;
        padding: 8px;
        border: 1px solid;
        width: 100px;
        height: 40px;
        background-color: #E21033;
        text-decoration: none;
        cursor: pointer;
    }

        .btn-detail:hover {
            color: black;
        }
</style>

<link href="//cdn.datatables.net/buttons/1.7.1/css/buttons.dataTables.min.css" rel="stylesheet">
<link href="~/css/jquery.dataTables.min.css" rel="stylesheet" />
<link href="~/css/datatable.css" rel="stylesheet" />

@section Scripts {
    <script src="//code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="//cdn.datatables.net/1.13.4/js/jquery.dataTables.min.js"></script>
    <script src="//cdn.datatables.net/buttons/1.7.1/js/dataTables.buttons.min.js"></script>
    <script src="//cdn.datatables.net/buttons/1.7.1/js/buttons.html5.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/jszip/3.1.3/jszip.min.js"></script>
    <script src="//cdn.datatables.net/buttons/1.7.1/js/buttons.print.min.js"></script>
    <script src="//cdn.datatables.net/buttons/1.7.1/js/buttons.colVis.min.js"></script>
    <script src="//cdn.datatables.net/buttons/1.7.1/js/buttons.excel.min.js"></script>
    <script src="//cdn.datatables.net/buttons/1.7.1/js/dataTables.buttons.min.js"></script>

    <script>
        $(document).ready(function () {
            var table = $('#lists').DataTable({
                "paging": true,
                "lengthMenu": [[10, 25, 50, -1], [10, 25, 50, "All"]],
                "searching": true,
                "ordering": true,
                "info": true,
                "autoWidth": false,
                "columnDefs": [
                    { "targets": [0], "width": "2%" },
                    { "targets": [1], "width": "13%" },
                    { "targets": [2], "width": "25%" },
                    { "targets": [3], "width": "15%" },
                    { "targets": [4], "width": "10%" },
                    { "targets": [5], "width": "15%" },
                    { "targets": [6], "width": "10%" },
                    { "targets": [7], "width": "10%" },
                ],
                "language": {
                    "lengthMenu": "Hiển thị _MENU_ dòng",
                    "info": "Hiển thị _START_ - _END_ trên tổng cộng _TOTAL_ dòng",
                    "search": "Tìm kiếm:",
                    "paginate": {
                        "first": "Đầu",
                        "last": "Cuối",
                        "next": "Tiếp",
                        "previous": "Trước"
                    }
                },
            });

            var addRoomCategoryButton = $('<button id="addRoomButton" class="btn btn-add btn-primary">Thêm phòng</button>');
            $('.dataTables_filter').append(addRoomCategoryButton);

            $('#addRoomButton').on('click', function () {
                window.location.href = '/Manager/Room/AddRoom';
            });
        });
    </script>
}
<div class="bg">
    <h1 style="font-size: 40px; font-weight: bold; margin-top: 10px">Danh sách các phòng cho thú cưng</h1>

    <table id="lists" class="display">
        <thead>
            <tr>
                <th>STT</th>
                <th>Tên phòng</th>
                <th>Mô tả</th>
                <th>Ảnh</th>
                <th>Giá</th>
                <th>Loại phòng</th>
                <th>Số lượng</th>
                <th>Chi tiết</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Count > 0)
            {
                int itemCount = 0;
                foreach (var room in Model)
                {
                    itemCount++;
                    string description = room.Desciptions;

                    if (description.Length > 100)
                    {
                        int lastSpace = description.LastIndexOf(' ', 100);

                        description = (lastSpace > 0) ? description.Substring(0, lastSpace) + "..." : description.Substring(0, 100) + "...";
                    }
                    <tr>
                        <td>@itemCount</td>
                        <td>@room.RoomName</td>
                        <td>@description</td>
                        <td><img src="@room.Picture" width="50" height="50"></td>
                        <td>@room.Price đ</td>
                        <td>@room.RoomCategoriesName</td>
                        <td>@room.Slot</td>
                        <td>
                            <a class="btn-detail" href="/Manager/Room/EditRoom?roomId=@room.RoomId">Chi tiết</a>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="5" style="color:red">Không có dữ liệu để hiển thị.</td>
                </tr>
            }
        </tbody>
        <tfoot>
            @if (ViewBag.ErrorMessage != null)
            {
                <div class="alert alert-danger">
                    <span style="color:red">@ViewBag.ErrorMessage</span>
                </div>
            }
        </tfoot>
    </table>
</div>