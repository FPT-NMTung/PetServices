<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css"
          integrity="sha512-z3gLpd7yknf1YoNbCzqRKc4qyor8gaKU1qmn+CShxbuBusANI9QpRohGBreCFkKxLhei6S9CQXFEbbKuqLg0DA=="
          crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link href="~/managercss/layoutManager.css" rel="stylesheet" />
    <link href="~/css/toastNotification.css" rel="stylesheet" />

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/managerjs/layoutmanager.js"></script>
    <script src="~/js/toastnotification.js"></script>

    <title>Slidebar Manager</title>
</head>

<body>
    <div class="sidebar position-fixed top-0 bottom-0 bg-white border-end">
        <div class="d-flex align-items-center p-3">
            <a href="#" class="sidebar-logo text-uppercase fw-bold text-decoration-none text-indigo fs-3">Quản lý</a>
            <i class="sidebar-toggle fa-regular fa-circle-left ms-auto fs-5 d-none d-md-block"></i>
        </div>
        <ul class="sidebar-menu p-3 m-0 mb-0">
            <li class="sidebar-menu-item active">
                <a href="#">
                    <i class="fa-solid fa-square-poll-vertical sidebar-menu-item-icon"></i>
                    Thống kê doanh số
                </a>
            </li>
            <li class="sidebar-menu-divider mt-3 mb-1 text-uppercase">Custom</li>
            <li class="sidebar-menu-item has-dropdown">
                <a href="#">
                    <i class="fa-regular fa-file sidebar-menu-item-icon"></i>
                    Pages
                    <i class="fa-solid fa-angle-down sidebar-menu-item-accordion ms-auto"></i>
                </a>
                <ul class="sidebar-dropdown-menu">
                    <li class="sidebar-dropdown-menu-item">
                        <a href="#">
                            User Profile
                        </a>
                    </li>
                    <li class="sidebar-dropdown-menu-item">
                        <a href="#">
                            Pricing
                        </a>
                    </li>
                </ul>
            </li>
            <li class="sidebar-menu-item has-dropdown">
                <a href="#">
                    <i class="fa-regular fa-window-restore sidebar-menu-item-icon"></i>
                    Widgets
                    <i class="fa-solid fa-angle-down sidebar-menu-item-accordion ms-auto"></i>
                </a>
                <ul class="sidebar-dropdown-menu">
                    <li class="sidebar-dropdown-menu-item">
                        <a href="#">
                            Charts
                        </a>
                    </li>
                    <li class="sidebar-dropdown-menu-item">
                        <a href="#">
                            Tables
                        </a>
                    </li>
                </ul>
            </li>
            <li class="sidebar-menu-divider mt-3 mb-1 text-uppercase">Apps</li>
            <li class="sidebar-menu-item has-dropdown">
                <a href="#">
                    <i class="fa-solid fa-store sidebar-menu-item-icon"></i>
                    eCommerce
                    <i class="fa-solid fa-angle-down sidebar-menu-item-accordion ms-auto"></i>
                </a>
                <ul class="sidebar-dropdown-menu">
                    <li class="sidebar-dropdown-menu-item">
                        <a href="#">
                            Shop
                        </a>
                    </li>
                    <li class="sidebar-dropdown-menu-item">
                        <a href="#">
                            Checkout
                        </a>
                    </li>
                    <li class="sidebar-dropdown-menu-item">
                        <a href="#">
                            Details
                        </a>
                    </li>
                    <li class="sidebar-dropdown-menu-item">
                        <a href="#">
                            Wishlist
                        </a>
                    </li>
                </ul>
            </li>
            <li class="sidebar-menu-item">
                <a href="#">
                    <i class="fa-brands fa-empire sidebar-menu-item-icon"></i>
                    Email
                </a>
            </li>
            <li class="sidebar-menu-item">
                <a href="#">
                    <i class="fa-brands fa-empire sidebar-menu-item-icon"></i>
                    Calendar
                </a>
            </li>
        </ul>
    </div>

    <main class="bg-light">
        <div class="p-2">
            <nav class="px-3 py-2 bg-white rounded shadow nav_menu">
                <i class="sidebar-toggle fa-solid fa-bars me-3 d-block d-md-none"></i>
                <h1 class="fw-bold mb-0 me-auto"></h1>
                <div class="dropdown">
                    <div class="d-flex align-items-center cursor-pointer dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
                        <span class="me-2 d-none d-sm-block">John Doe</span>
                        <img class="navbar-profile-image" src="https://images.unsplash.com/flagged/photo-1570612861542-284f4c12e75f?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxzZWFyY2h8M3x8cGVyc29ufGVufDB8fDB8fA%3D%3D&auto=format&fit=crop&w=500&q=60" alt="Image">
                    </div>
                    <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
                        <li><a class="dropdown-item" href="~/Manager/Information">Thông tin người dùng</a></li>
                        <li><a class="dropdown-item" href="~/Logout/Index">Đăng xuất @RenderSection("Logout", required: false)</a></li>
                    </ul>
                </div>
            </nav>
        </div>
        <div>
            @RenderSection("scripts", required: false)
            @RenderBody()
        </div>
    </main>
     <div id="toast"></div>
    @if (!string.IsNullOrEmpty(TempData["SuccessToast"] as string))
    {
        <script>
            document.addEventListener("DOMContentLoaded", function () {
                showSuccessToast();
            });
        </script>
    }
    @if (!string.IsNullOrEmpty(TempData["ErrorToast"] as string))
    {
        <script>
            document.addEventListener("DOMContentLoaded", function () {
                showErrorToast();
            });
        </script>
    }
    @if (!string.IsNullOrEmpty(TempData["SuccessLoginToast"] as string))
    {
        <script>
            document.addEventListener("DOMContentLoaded", function () {
                showSuccessLoginToast();
            });
        </script>
    }
    <script>
            function showSuccessToast() {
                toast({
                    title: 'Thành công',
                    message: '@TempData["SuccessToast"]',
                    type: 'success',
                    duration: 2000
                });
            }
        function showErrorToast() {
            toast({
                title: 'Thất bại',
                message: '@TempData["ErrorToast"]',
                type: 'error',
                duration: 2000
            });
        }
        function showSuccessLoginToast() {
            toast({
                title: 'Thành công',
                message: '@TempData["SuccessLoginToast"]',
                type: 'success',
                duration: 2000
            });
        }
    </script>
</body>
</html>