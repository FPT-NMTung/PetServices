@model FEPetServices.Form.ProductCategoryDTO
<h1>Chỉnh Sửa Loại Sản Phẩm</h1>
@if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
{
    <div class="alert alert-danger" style="color:red">
        @ViewBag.ErrorMessage
    </div>
}
@if (!string.IsNullOrEmpty(TempData["SuccessMessage"]?.ToString()))
{
    <div class="alert alert-success" style="color:red">
        @TempData["SuccessMessage"]
    </div>
}
<form asp-action="Update" method="post" enctype="multipart/form-data">
    <input type="hidden" name="method" value="put" />
    <div class="form-group">
        <label for="ProCategoriesName">Tên Loại Sản Phẩm: </label>
        <input type="text" class="form-control" id="ProCategoriesName" name="ProCategoriesName" value="@Model?.ProCategoriesName" />
    </div>
    <div class="form-group">
        <label for="Picture">Hình Ảnh Loại Sản Phẩm: </label>
        <input type="file" class="form-control-file" id="Picture" name="Picture"/>
    </div>
    <div class="form-group">
        <label for="Desciptions">Mô Tả Chi Tiết: </label>
        <textarea class="form-control" id="Desciptions" name="Desciptions"> @Model?.Desciptions</textarea>
    </div>
    <button type="submit" class="btn btn-primary">Thêm Mới</button>
</form>