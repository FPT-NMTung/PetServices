<style>
    /* CSS for DataTable */
    h1 {
        text-align: center;
    }

    #pcList {
        width: 100%;
        margin-top: 20px;
        border-collapse: collapse;
    }

        #pcList th,
        #pcList td {
            padding: 10px;
            text-align: left;
            border-bottom: 1px solid #ddd;
        }

        #pcList th {
            background-color: #f2f2f2;
        }

    .future-status {
        color: gray;
    }

    .complete-status {
        color: green;
    }

    .dataTables_wrapper .dataTables_filter {
        float: right;
        margin-bottom: 10px;
    }

    /* Add this CSS to style the "Thêm dịch vụ" button */
    #addButton {
        float: left; /* Di chuyển nút sang bên phải */
        margin-right: 10px; /* Khoảng cách từ nút "Thêm dịch vụ" đến thanh tìm kiếm */
        width: 150px;
        height: 25px;
    }

    /* Add this CSS to move the search input to the left and add 10px margin */
    .dataTables_wrapper .dataTables_filter input[type="search"] {
        margin-left: 10px;
    }

    .dataTables_wrapper {
        margin: 30px;
    }
</style>

<link href="//cdn.datatables.net/buttons/1.7.1/css/buttons.dataTables.min.css" rel="stylesheet">
<link href="//cdn.datatables.net/1.13.4/css/jquery.dataTables.min.css" rel="stylesheet">

@section Scripts {
    <script src="//code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="//cdn.datatables.net/1.13.4/js/jquery.dataTables.min.js"></script>
    <script src="//cdn.datatables.net/buttons/1.7.1/js/dataTables.buttons.min.js"></script>
    <script src="//cdn.datatables.net/buttons/1.7.1/js/buttons.html5.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/jszip/3.1.3/jszip.min.js"></script>
    <script src="//cdn.datatables.net/buttons/1.7.1/js/buttons.print.min.js"></script>
    <script src="//cdn.datatables.net/buttons/1.7.1/js/buttons.colVis.min.js"></script>
    <script src="//cdn.datatables.net/buttons/1.7.1/js/buttons.excel.min.js"></script>
    @*<script src="//cdn.datatables.net/buttons/1.7.1/js/dataTables.buttons.min.js"></script>*@

    <script>
        $(document).ready(function () {
            // Khởi tạo DataTables
            var table = $('#pcList').DataTable({
                "paging": true,
                "lengthMenu": [[10, 25, 50, -1], [10, 25, 50, "All"]],
                "searching": true,
                "ordering": true,
                "info": true,
                "autoWidth": false,
                "columnDefs": [
                    { "targets": [0], "width": "5%" },
                    { "targets": [1], "width": "20%" },
                    { "targets": [2], "width": "35%" },
                    { "targets": [3], "width": "25%" }, // Điều chỉnh cột này để khớp với số cột thực tế
                    { "targets": [4], "width": "15%" },
                ],
                "language": {
                    "lengthMenu": "Hiển thị _MENU_ dòng",
                    "info": "Hiển thị _START_ - _END_ trên tổng cộng _TOTAL_ dòng",
                    "search": "Tìm kiếm:",
                    "paginate": {
                        "first": "Đầu",
                        "last": "Cuối",
                        "next": "Tiếp",
                        "previous": "Trước"
                    }
                },
            });

            // Thêm nút "Thêm dịch vụ" bên phải thanh tìm kiếm
            var addButton = $('<button id="addButton" class="btn btn-primary">Thêm Loại Sản Phẩm</button>');
            $('.dataTables_filter').append(addButton);

            // Đính kèm sự kiện click cho nút "Thêm dịch vụ"
            $('#addButton').on('click', function () {
                // Navigate to the "addservicecategory" page
                window.location.href = '/Manager/ProductCategory/CreateNewProductCategory'; // Update this URL as needed
            });

        });
    </script>
}

<h1>Danh Sách Loại Sản Phẩm Cho Thú Cưng</h1>

<table id="pcList" class="display">
    <thead>
        <tr>
            <th>No.</th>
            <th>Ảnh</th>
            <th>Tên Loại Sản Phẩm</th>
            <th>Mô Tả</th>
            <th>Chi Tiết</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Count > 0)
        {
            int itemCount = 0;
            foreach (var pc in Model)
            {
                itemCount++;
                <tr>
                    <td>@itemCount</td>
                    <td><img src="@pc.Prictue" width="50" height="50"></td>
                    <td>@pc.ProCategoriesName</td>
                    <td>@pc.Desciptions</td>
                    <td>
                        <a href="/Manager/ProductCategory/Update?procateId=@pc.ProCategoriesId">Chi tiết</a>
                    </td>

                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="5" style="color:red">Không có dữ liệu để hiển thị.</td>
            </tr>
        }
    </tbody>
    <tfoot>
        @if (ViewBag.ErrorMessage != null)
        {
            <div class="alert alert-danger">
                <span style="color:red">@ViewBag.ErrorMessage</span>
            </div>
        }
    </tfoot>



    <!-- Your table and data display code -->

</table>
