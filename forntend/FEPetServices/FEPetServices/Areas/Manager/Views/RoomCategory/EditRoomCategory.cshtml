﻿<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="~/css/RoomCategory.css">
    <link href="~/css/toastNotification.css" rel="stylesheet" />
</head>
<body>

    <h1 style="font-size: 40px; font-weight: bold; text-align:center">Chỉnh sửa loại phòng cho thú cưng</h1>
    <div class="container">
        <form method="post" asp-controller="RoomCategory" asp-action="EditRoomCategory" enctype="multipart/form-data" onsubmit="return validateForm()">
            <div class="row">
                <div class="col-25">
                    <label for="RoomCategoriesName">Tên Dịch Vụ:</label>
                </div>
                <div class="col-75">
                    <input type="text" id="RoomCategoriesName" name="RoomCategoriesName" value="@Model?.RoomCategoriesName">
                    <div style="color:red" class="error-message" id="fname-error-message"></div>
                </div>
            </div>
            <div class="row">
                <div class="col-25">
                    <label for="image">Ảnh:</label>
                </div>

                <div class="col-75">
                    <input type="file" id="image" name="image" onchange="changeImageSource()" style="margin-top:20px">

@*                    <img src="@Model.Picture" height="100px" width="100px" style="float: left;" id="imagePreview">
*@
                </div>
            </div>
            <div class="row">
                <div class="col-25">
                    <label for="Desciptions">Mô Tả:</label>
                </div>
                <div class="col-75">
                    <textarea id="Desciptions" name="Desciptions" placeholder="Nội Dung .." style="height:200px">@Model?.Desciptions</textarea>
                    <div style="color:red" class="error-message" id="subject-error-message"></div>
                </div>
            </div>
            <div class="row">
                <div class="col-25">
                    <label for="Status">Trạng thái:</label>
                </div>
                <div class="col-75 switch">
                    <label class="switch">
@*                        <input type="checkbox" name="Status" @(Model.Status ? "checked" : "")>
*@                        <span class="slider round"></span>
                    </label>
                </div>
            </div>
            <div class="row">
                <div class="col-25">
                </div>
                <div class="col-75 btn-row">
                    <div class="btn-back">
                        <a type="submit" value="Cancal" href="/Manager/RoomCategory" class="cancel">Trở lại</a>
                    </div>
                    <div class="btn-submit">
                        <input type="submit" value="Thêm loại dịch vụ">
                    </div>
                </div>
            </div>
        </form>

    </div>
    <div id="toast"></div>
    @if (!string.IsNullOrEmpty(TempData["SuccessToast"] as string))
    {
        <script>
            document.addEventListener("DOMContentLoaded", function () {
                showSuccessToast();
            });
        </script>
    }
    @if (!string.IsNullOrEmpty(TempData["ErrorToast"] as string))
    {
        <script>
            document.addEventListener("DOMContentLoaded", function () {
                showErrorToast();
            });
        </script>
    }
    <script src="~/js/toastnotification.js"></script>
    <script src="/js/RoomCategory.js"></script>

    <script>
        function showSuccessToast() {
            toast({
                title: 'Thành công',
                message: '@TempData["SuccessToast"]',
                type: 'success',
                duration: 2000
            });
        }
        function showErrorToast() {
            toast({
                title: 'Thất bại',
                message: '@TempData["ErrorToast"]',
                type: 'error',
                duration: 2000
            });
        }
    </script>

</body>
</html>
