<!DOCTYPE html>
<html>
<head>
<meta name="viewport" content="width=device-width, initial-scale=1">
<link rel="stylesheet" href="/css/Service/SeriveCategory.css"></link>
<link href="~/css/toastNotification.css" rel="stylesheet" />
<link href="~/css/toastNotification.css" rel="stylesheet" />
<link href="~/css/datatable.css" rel="stylesheet" />
</head>
<body>
<h2>Chỉnh Sửa Loại Dịch Vụ Thú Cưng</h2>
<div class="container">
  <form method="post" asp-controller="ServiceCategory" asp-action="EditServiceCategory" enctype="multipart/form-data" onsubmit="return validateForm()">
    <div class="row">
      <div class="col-25">
        <label for="SerCategoriesName">Tên Dịch Vụ:</label>
      </div>
      <div class="col-75">
        <input type="text" id="SerCategoriesName" name="SerCategoriesName"  value="@Model?.ServiceCategoryDTO.SerCategoriesName">
        <div style="color:red" class="error-message" id="fname-error-message"></div>
      </div>
    </div>
    <div class="row">
    <div class="col-25">
        <label for="image">Ảnh:</label>
    </div>
        
    <div class="col-75">
        <input type="file" id="image" name="image" onchange="changeImageSource()" style="margin-top:20px" >

        <img src="@Model?.ServiceCategoryDTO.Picture" height="100px" width="100px" style="float: left;" id="imagePreview">
        
    </div>
    </div>
    <div class="row">
      <div class="col-25">
        <label for="Desciptions">Mô Tả:</label>
      </div>
      <div class="col-75">
        <textarea id="Desciptions" name="Desciptions" placeholder="Nội Dung .." style="height:200px"  >@Model?.ServiceCategoryDTO.Desciptions</textarea>
        <div style="color:red" class="error-message" id="subject-error-message"></div>
      </div>
    </div>
    <div class="row">
        <div class="col-25">
            <label for="Status">Trạng thái:</label>
        </div>
        <div class="col-75">
            <label class="switch">
                <input type="checkbox" name="Status" @(Model?.ServiceCategoryDTO.Status ? "checked" : "")>
                <span class="slider round"></span>
            </label>
        </div>
    </div>
    <div class="row">
         <div class="btn-group col-2">
         <a class="btn btn-primary btn_a" type="submit" value="Cancal" href="/Manager/ServiceCategory">Trở lại</a>
         </div>
          <div class="col-10">
           <input class="btn btn-primary" type="submit" value="Lưu thay đổi">
           </div>
         </div>
  </form>

</div>
<div class="container">
<h1>Danh sách dịch vụ</h1>

<table id="lists" class="display">
    <thead>
        <tr>
            <th>No.</th>
            <th>Tên dịch vụ</th>
            <th>Mô tả</th>
            <th>Ảnh</th>
            <th>Trạng thái</th>
            <th>Chi tiết</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.serviceDTO != null && Model.serviceDTO.Count > 0)
        {
            int itemCount = 0;
            foreach (var service in Model.serviceDTO)
            {
                itemCount++;
                string description = service.Desciptions;

                 if (description != null)
                  {
                      if (description.Length > 100)
                       {
                         int lastSpace = description.LastIndexOf(' ', 100);
                         description = (lastSpace > 0) ? description.Substring(0, lastSpace) + "..." : description.Substring(0, 100) + "...";
                        }
                       else
                         {
                          description = service.Desciptions;
                          }
                        }
                        else
                        {
                          description = string.Empty;
                        }                     

                <tr>
                    <td>@itemCount</td>
                    <td>@service.ServiceName</td>
                    <td>@description</td>
                    <td><img src="@service.Picture" width="50" height="50"></td>
                    <td>
                        @if (@service.Status)
                        {
                            <button class="btn btn-active" onclick="toggleStatus(this)">Đang hoạt động</button>
                        }
                        else
                        {
                            <button class="btn btn-inactive" onclick="toggleStatus(this)">Ngưng hoạt động</button>
                        }
                    </td>
                    <td>
                        <a href="/Manager/Service/EditService?serviceId=@service.ServiceId">Chi tiết</a>
                    </td>

                </tr>
            }
        }
    </tbody>
</table>
</div>
<script>
    $(document).ready(function () {
        // Khởi tạo DataTables
        var table = $('#lists').DataTable({
                "responsive": true,
            "paging": true,
            "lengthMenu": [[10, 25, 50, -1], [10, 25, 50, "All"]],
            "searching": true,
            "ordering": true,
            "info": true,
            "autoWidth": false,
            "columnDefs": [
                { "targets": [0], "width": "5%" },
                { "targets": [1], "width": "20%" },
                { "targets": [2], "width": "30%" },
                { "targets": [3], "width": "20%" },
                { "targets": [4], "width": "15%" },
                { "targets": [5], "width": "10%" },
            ],
            "language": {
                "lengthMenu": "Hiển thị _MENU_ dòng",
                "info": "Hiển thị _START_ - _END_ trên tổng cộng _TOTAL_ dòng",
                "search": "Tìm kiếm:",
                "paginate": {
                    "first": "Đầu",
                    "last": "Cuối",
                    "next": "Tiếp",
                    "previous": "Trước"
                }
            },
        });

        // Thêm nút "Thêm dịch vụ" bên cạnh thanh tìm kiếm
        var addServiceButton = $('<button  id="addServiceButton" class="btn btn-primary">Thêm dịch vụ</button>');
        $('.dataTables_filter').append(addServiceButton);

        // Đính kèm sự kiện click cho nút "Thêm dịch vụ"
        $('#addServiceButton').on('click', function () {
            // Navigate to the "addservicecategory" page
            window.location.href = '/Manager/Service/AddService'; // Update this URL as needed
        });

    });
</script>
 <script src="/js/ServiceCategory.js"></script>
 <style>
    .btn-active {
        background-color: #43e240;
        color: white;
        font-size: 13px;
        width: 135px;
        height: 40px;
        border-radius: 5px;
    }

    .btn-inactive {
        background-color: #f2110d;
        color: white;
        font-size: 13px;
        width: 135px;
        height: 40px;
        border-radius: 5px;
    }
</style>
</body>
</html>
