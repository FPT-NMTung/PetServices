<!DOCTYPE html>
<html>
<head>
<meta name="viewport" content="width=device-width, initial-scale=1">
<link rel="stylesheet" href="~/css/SeriveCategory.css">
<link href="~/css/toastNotification.css" rel="stylesheet" />
</head>
<body>

<h2>Chỉnh Sửa Loại Dịch Vụ Thú Cưng</h2>
@if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
{
    <div class="alert alert-danger" style="color:red">
        @ViewBag.ErrorMessage
    </div>
}
@if (!string.IsNullOrEmpty(TempData["SuccessMessage"]?.ToString()))
{
    <div class="alert alert-success" style="color:red">
        @TempData["SuccessMessage"]
    </div>
}
<div class="container">
  <form method="post" asp-controller="ServiceCategory" asp-action="EditServiceCategory" enctype="multipart/form-data" onsubmit="return validateForm()">
    <div class="row">
      <div class="col-25">
        <label for="SerCategoriesName">Tên Dịch Vụ:</label>
      </div>
      <div class="col-75">
        <input type="text" id="SerCategoriesName" name="SerCategoriesName"  value="@Model?.SerCategoriesName">
        <div style="color:red" class="error-message" id="fname-error-message"></div>
      </div>
    </div>
    <div class="row">
    <div class="col-25">
        <label for="image">Ảnh:</label>
    </div>
        
    <div class="col-75">
        <input type="file" id="image" name="image" onchange="changeImageSource()" style="margin-top:20px" >

        <img src="@Model.Prictue" height="100px" width="100px" style="float: left;" id="imagePreview">
        
    </div>
    </div>
    <div class="row">
      <div class="col-25">
        <label for="Desciptions">Mô Tả:</label>
      </div>
      <div class="col-75">
        <textarea id="Desciptions" name="Desciptions" placeholder="Nội Dung .." style="height:200px"  >@Model?.Desciptions</textarea>
        <div style="color:red" class="error-message" id="subject-error-message"></div>
      </div>
    </div>
    <div class="row">
      <div class="col-25">
        <a type="submit" value="Cancal" href="/Manager/ServiceCategory" class="cancel">Cancel</a>
      </div>
    <div class="col-75">
      <input type="submit" value="Submit">
    </div>
    </div>
  </form>

</div>
 <div id="toast"></div>
    @if (!string.IsNullOrEmpty(TempData["SuccessToast"] as string))
    {
        <script>
            document.addEventListener("DOMContentLoaded", function () {
                showSuccessToast();
            });
        </script>
    }
    @if (!string.IsNullOrEmpty(TempData["ErrorToast"] as string))
    {
        <script>
            document.addEventListener("DOMContentLoaded", function () {
                showErrorToast();
            });
        </script>
    }
 <script src="~/js/toastnotification.js"></script>
 <script src="/js/ServiceCategory.js"></script>

 <script>
        function showSuccessToast() {
            toast({
                title: 'Thành công',
                message: '@TempData["SuccessToast"]',
                type: 'success',
                duration: 2000
            });
        }
        function showErrorToast() {
            toast({
                title: 'Thất bại',
                message: '@TempData["ErrorToast"]',
                type: 'error',
                duration: 2000
            });
        }
    </script>

</body>
</html>
