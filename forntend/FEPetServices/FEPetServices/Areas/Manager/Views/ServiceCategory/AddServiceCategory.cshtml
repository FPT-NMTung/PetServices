
@{
    ViewData["Title"] = "Thêm Dịch Vụ";
}

<!DOCTYPE html>
<html>
<head>
<meta name="viewport" content="width=device-width, initial-scale=1">
<link rel="stylesheet" href="~/css/SeriveCategory.css">
    <script src="/js/ServiceCategory.js"></script>
</head>
<body>

<h2>Thêm Loại Dịch Vụ Thú Cưng</h2>
@if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
{
    <div class="alert alert-danger" style="color:red">
        @ViewBag.ErrorMessage
    </div>
}
@if (!string.IsNullOrEmpty(TempData["SuccessMessage"]?.ToString()))
{
    <div class="alert alert-success" style="color:red">
        @TempData["SuccessMessage"]
    </div>
}
<div class="container">
  <form asp-action="AddServiceCategory" method="post" enctype="multipart/form-data" onsubmit="return validateForm()">
    <div class="row">
      <div class="col-25">
        <label for="SerCategoriesName">Tên Dịch Vụ:</label>
      </div>
      <div class="col-75">
        <input type="text" id="SerCategoriesName" name="SerCategoriesName" placeholder="Tên Dịch Vụ.." required>
        <div style="color:red" class="error-message" id="fname-error-message"></div>
      </div>
    </div>
    <div class="row">
    <div class="col-25">
        <label for="image">Ảnh:</label>
    </div>
        
    <div class="col-75">
        <input type="file" id="image" name="image" onchange="changeImageSource()" style="margin-top:20px" required>

        <img src="/img/pngtree-add-vector-icon-png-image_470700.jpg" height="100px" width="100px" style="float: left;" id="imagePreview">
        
    </div>
    </div>
    <div class="row">
      <div class="col-25">
        <label for="Desciptions">Mô Tả:</label>
      </div>
      <div class="col-75">
        <textarea id="Desciptions" name="Desciptions" placeholder="Nội Dung .." style="height:200px" required></textarea>
        <div style="color:red" class="error-message" id="subject-error-message"></div>
      </div>
    </div>
<div class="row">
    <div class="col-25">
        <a type="submit" value="Cancal" href="/Manager/ServiceCategory" class="cancel">Cancel</a>
      </div>
    <div class="col-75">
      <input type="submit" value="Submit">
    </div>
 </div>
  </form>
</div>
<script src="~/js/ServiceCategory.js"></script>
</body>
</html>

