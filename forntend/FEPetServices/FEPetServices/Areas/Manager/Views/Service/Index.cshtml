﻿
<link href="~/css/toastNotification.css" rel="stylesheet" />
<link href="~/css/datatable.css" rel="stylesheet" />

<script>
    $(document).ready(function () {
        // Khởi tạo DataTables
        var table = $('#lists').DataTable({
            "responsive": true,
            "paging": true,
            "lengthMenu": [[10, 25, 50, -1], [10, 25, 50, "All"]],
            "searching": true,
            "ordering": true,
            "info": true,
            "autoWidth": false,
            "columnDefs": [
                { "targets": [0], "width": "5%" },
                { "targets": [1], "width": "20%" },
                { "targets": [2], "width": "30%" },
                { "targets": [3], "width": "20%" },
                { "targets": [4], "width": "15%" },
                { "targets": [5], "width": "10%" },
            ],
            "language": {
                "lengthMenu": "Hiển thị _MENU_ dòng",
                "info": "Hiển thị _START_ - _END_ trên tổng cộng _TOTAL_ dòng",
                "search": "Tìm kiếm:",
                "paginate": {
                    "first": "Đầu",
                    "last": "Cuối",
                    "next": "Tiếp",
                    "previous": "Trước"
                }
            },
        });

        // Thêm nút "Thêm dịch vụ" bên cạnh thanh tìm kiếm
        var addServiceButton = $('<button  id="addServiceButton" class="btn btn-primary">Thêm dịch vụ</button>');
        $('.dataTables_filter').append(addServiceButton);

        // Đính kèm sự kiện click cho nút "Thêm dịch vụ"
        $('#addServiceButton').on('click', function () {
            // Navigate to the "addservicecategory" page
            window.location.href = '/Manager/Service/AddService'; // Update this URL as needed
        });

    });
</script>

<h1>Danh sách dịch vụ cho thú cưng</h1>

<table id="lists" class="display">
    <thead>
        <tr>
            <th>No.</th>
            <th>Tên dịch vụ</th>
            <th>Mô tả</th>
            <th>Ảnh</th>
            <th>Trạng thái</th>
            <th>Chi tiết</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Count > 0)
        {
            int itemCount = 0;
            foreach (var service in Model)
            {
                itemCount++;
                string description = service.Desciptions;

                 if (description != null)
                  {
                      if (description.Length > 100)
                       {
                         int lastSpace = description.LastIndexOf(' ', 100);
                         description = (lastSpace > 0) ? description.Substring(0, lastSpace) + "..." : description.Substring(0, 100) + "...";
                        }
                       else
                         {
                          description = service.Desciptions;
                          }
                        }
                        else
                        {
                          description = string.Empty;
                        }                     

                <tr>
                    <td>@itemCount</td>
                    <td>@service.ServiceName</td>
                    <td>@description</td>
                    <td><img src="@service.Picture" width="50" height="50"></td>
                    <td>
                        @if (@service.Status)
                        {
                            <button class="btn-active" onclick="toggleStatus(this)">Đang hoạt động</button>
                        }
                        else
                        {
                            <button class="btn-inactive" onclick="toggleStatus(this)">Ngưng hoạt động</button>
                        }
                    </td>
                    <td>
                        <a href="/Manager/Service/EditService?serviceId=@service.ServiceId">Chi tiết</a>
                    </td>

                </tr>
            }
        }
    </tbody>
</table>
<style>
    h1{
        text-align: center;
        font-size: 40px;
        font-weight: bold;
        margin-top: 10px;
    }
    .btn-active {
        background-color: #43e240;
        color: white;
        font-size: 13px;
        width: 135px;
        height: 40px;
        border-radius: 5px;
        border: none;
    }

    .btn-inactive {
        background-color: #f2110d;
        color: white;
        font-size: 13px;
        width: 135px;
        height: 40px;
        border-radius: 5px;
        border: none;
    }

    .btn-active:hover {
        background-color: #26B323;
        color: black;
    }

    .btn-inactive:hover {
        background-color: #d30f0b;
        color: black;
    }
</style>