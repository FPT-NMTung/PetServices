<!DOCTYPE html>
<html>
<head>
<meta name="viewport" content="width=device-width, initial-scale=1">
<link rel="stylesheet" href="/css/Service/Service.css">
<link href="~/css/toastNotification.css" rel="stylesheet" />
</head>
<body>
<h2>Thêm Dịch Vụ Thú Cưng</h2>
<div class="container">
  <form asp-action="AddService" method="post" enctype="multipart/form-data" onsubmit="return validateForm()">
    <div class="row">
      <div class="col-25">
        <label for="ServiceName">Tên Dịch Vụ<i class="fa-sharp fa-solid fa-asterisk fa-rotate-270 fa-xs"></i>:</label>
      </div>
      <div class="col-75">
        <input type="text" id="ServiceName" name="ServiceName" placeholder="Tên Dịch Vụ.." required>
        <div style="color:red" class="error-message" id="fname-error-message"></div>
      </div>
    </div>
    <div class="row">
      <div class="col-25">
        <label for="image">Ảnh<i class="fa-sharp fa-solid fa-asterisk fa-rotate-270 fa-xs"></i>:</label>
      </div>
      <div class="col-75">
        <input type="file" id="image" name="image" onchange="changeImageSource()" style="margin-top:20px" required>
        <img src="/img/pngtree-add-vector-icon-png-image_470700.jpg" style="float: left;" id="imagePreview" >
      </div>
    </div>
    <div class="row">
      <div class="col-25">
        <label for="Price">Giá<i class="fa-sharp fa-solid fa-asterisk fa-rotate-270 fa-xs"></i>:</label>
      </div>
      <div class="col-75">
        <input type="number" id="Price" name="Price" placeholder="Giá tiền" required>
        <div style="color:red" class="error-message" id="price-error-message"></div> 
      </div>
    </div>
    <div class="row">
        <div class="col-25">
            <label for="Time">Thời gian làm dịch vụ<i class="fa-sharp fa-solid fa-asterisk fa-rotate-270 fa-xs"></i>:</label>
        </div>
        <div class="col-75">
            <input type="number" id="Time" name="Time" placeholder="Nhập giờ" step="any" required>
            <div style="color:red" class="error-message" id="time-error-message"></div>
        </div>
    </div>
    <div class="row">
      <div class="col-25">
        <label for="SerCategoriesId">Loại Dịch Vụ <i class="fa-sharp fa-solid fa-asterisk fa-rotate-270 fa-xs"></i></label>
      </div>
      <div class="col-75">
         @if (ViewBag.Categories != null){
         <select id="SerCategoriesId" name="SerCategoriesId" required>
            <option value="">Danh sách loại dịch vụ</option>
            @foreach (var category in ViewBag.Categories)
                {
                    <option value="@category.Value">@category.Text</option>
                }
        </select>
        } else {
            <span class="text-danger">Error: Service Categories data not available.</span>
        }
      </div>
    </div>
    <div class="row">
      <div class="col-25">
        <label for="Desciptions">Mô Tả<i class="fa-sharp fa-solid fa-asterisk fa-rotate-270 fa-xs"></i>:</label>
      </div>
      <div class="col-75">
        <textarea id="Desciptions" name="Desciptions" placeholder="Nội Dung .." style="height:200px" required></textarea>
        <div style="color:red" class="error-message" id="subject-error-message"></div>
      </div>
    </div>
    <div class="row">
      <div class="btn-group col-2">
         <a class="btn btn-primary btn_a" type="submit" value="Cancel" href="~/Manager/Service" class="cancel">Trở lại</a>
      </div>
      <div class="col-10">
        <input class="btn btn-primary" type="submit" value="Thêm mới dịch vụ">
      </div>
    </div>
  </form>
</div>
<style>
    img{
        width:100px;
        height:100px;
.fa-asterisk{
    color:red;
}

</style>
<script src="~/js/Service.js"></script>
</body>
</html>
