@model PetServices.Models.ServiceDTO

@{
    ViewData["Title"] = "Add Service";
}

<h1>Add Service</h1>

@if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
{
    <div class="alert alert-danger">
        @ViewBag.ErrorMessage
    </div>
}

@if (!string.IsNullOrEmpty(ViewBag.SuccessMessage))
{
    <div class="alert alert-success">
        @ViewBag.SuccessMessage
    </div>
}

<form method="post" asp-controller="Service" asp-action="AddService">
    <div class="form-group">
        <label for="ServiceName">Service Name</label>
        <input type="text" class="form-control" id="ServiceName" name="ServiceName" asp-for="ServiceName" required>
    </div>
    
    <div class="form-group">
        <label for="Desciptions">Description</label>
        <textarea class="form-control" id="Desciptions" name="Desciptions" asp-for="Desciptions" required></textarea>
    </div>
    
    <div class="form-group">
        <label for="Price">Price</label>
        <input type="number" class="form-control" id="Price" name="Price" asp-for="Price" required>
    </div>

    <div class="form-group">
        <label for="SerCategoriesId">Service Category</label>
        @if (ViewBag.Categories != null)
        {
            <select class="form-control" id="SerCategoriesId" name="SerCategoriesId" asp-for="SerCategoriesId" required>
                <option value="">Select a Service Category</option>
                @foreach (var category in ViewBag.Categories)
                {
                    <option value="@category.Value">@category.Text</option>
                }
            </select>
        }
        else
        {
            <span class="text-danger">Error: Service Categories data not available.</span>
        }
    </div>



    <div class="form-group">
        <label for="image">Image</label>
        <input type="file" class="form-control-file" id="image" name="image" accept=".jpg, .jpeg, .png">
    </div>

    <button type="submit" class="btn btn-primary">Add Service</button>
</form>

