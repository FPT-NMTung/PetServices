    <script>
        $(document).ready(function () {
            // Khởi tạo DataTables
            var table = $('#productList').DataTable({
                "paging": true,
                "lengthMenu": [[10, 25, 50, -1], [10, 25, 50, "All"]],
                "searching": true,
                "ordering": true,
                "info": true,
                "autoWidth": false,
                "columnDefs": [
                    { "targets": [0], "width": "5%" },
                    { "targets": [1], "width": "20%" },
                    { "targets": [2], "width": "20%" },
                    { "targets": [3], "width": "25%" }, // Điều chỉnh cột này để khớp với số cột thực tế
                    { "targets": [4], "width": "15%" },
                    { "targets": [5], "width": "15%" },
                ],
                "language": {
                    "lengthMenu": "Hiển thị _MENU_ dòng",
                    "info": "Hiển thị _START_ - _END_ trên tổng cộng _TOTAL_ dòng",
                    "search": "Tìm kiếm:",
                    "paginate": {
                        "first": "Đầu",
                        "last": "Cuối",
                        "next": "Tiếp",
                        "previous": "Trước"
                    }
                },
            });

            // Thêm nút "Thêm dịch vụ" bên phải thanh tìm kiếm
            var addButton = $('<button id="addButton" class="btn btn-primary">Thêm Loại Sản Phẩm</button>');
            $('.dataTables_filter').append(addButton);

            // Đính kèm sự kiện click cho nút "Thêm dịch vụ"
            $('#addButton').on('click', function () {
                // Navigate to the "addservicecategory" page
                window.location.href = '/Manager/Product/Add'; // Update this URL as needed
            });

        });
    </script>
}

<h1>Danh Sách Sản Phẩm Cho Thú Cưng</h1>

<table id="productList" class="display">
    <thead>
        <tr>
            <th>No.</th>
            <th>Ảnh</th>
            <th>Tên Sản Phẩm</th>
            <th>Mô Tả</th>
            <th>Trạng Thái</th>
            <th>Chi Tiết</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Count > 0)
        {
            int itemCount = 0;
            @foreach (var product in Model)
            {
                <tr>
                    <td>@product.ProductId</td>
                    <td><img src="@product.Picture" width="50" height="50"></td>
                    <td>@product.ProductName</td>
                    <td>@product.Desciption</td>
                    <td>
                        <div class="switch">
                            <input type="checkbox" name="Status" class="toggle" @(product?.Status ? "checked" : "") />
                            <label class="label @(product?.Status ? "active" : "inactive")"></label>
                        </div>
                    </td>
                    <td>
                        <a href="/Manager/Product/Update?proId=@product.ProductId">Chi tiết</a>
                    </td>
                </tr>
            }

        }
        else
        {
            <tr>
                <td colspan="5" style="color:red">Không có dữ liệu để hiển thị.</td>
            </tr>
        }
    </tbody>
    <tfoot>
        @if (ViewBag.ErrorMessage != null)
        {
            <div class="alert alert-danger">
                <span style="color:red">@ViewBag.ErrorMessage</span>
            </div>
        }
    </tfoot>



    <!-- Your table and data display code -->

</table>
<style>
    .switch {
        position: relative;
        width: 80px;
        height: 35px;
        margin-left: -7px;
    }

    .toggle {
        position: absolute;
        top: 0;
        left: 0;
        width: inherit;
        height: inherit;
        opacity: 0;
        z-index: 2;
        cursor: pointer;
    }

    .label {
        position: absolute;
        top: 2px;
        left: 10px;
        right: 2px;
        bottom: 2px;
        background-color: #C84444;
        border-radius: 24px;
        transition: background-color .2s ease-in-out;
    }

        .label::before {
            content: "";
            position: absolute;
            top: -2px;
            left: -2px;
            width: 35px;
            height: 35px;
            background-color: white;
            border-radius: inherit;
            border: 1px solid grey;
        }

    .toggle:checked + .label {
        background-color: #43e240;
    }

        .toggle:checked + .label::before {
            transform: translateX(100%);
        }

    .td-switch {
        display: flex;
        align-items: center;
    }

        .td-switch .label {
            width: 25px;
            height: 25px;
        }

            .td-switch .label.active {
                background-color: #43e240;
            }

            .td-switch .label.inactive {
                background-color: #f2110d;
            }
</style>